
@model IEnumerable<E_Commerce_Portal.ViewModel.ProductCartView>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Cart</h1>

<p>
    <a asp-controller="ECommerce" asp-action="Index">Add Item</a>
</p>
<table class="table">
        <thead>
            <tr>
                <th>
                    
                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Delivery Date
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="@("~/image/"+item.Products.Image_Name)" asp-append-version="true" alt="Card image" height="300" width="300">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Carts.Quantity)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.Carts.DeliveryDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Products.Price)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Details", "Details", new { /* id=item.PrimaryKey */ }) |
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ })
            </td>
        </tr>
        }
    </tbody>
</table>
