
@model IEnumerable<E_Commerce_Portal.ViewModel.ProductListView>

@{
    ViewData["Title"] = "Index";
}

<h1>Your Cart</h1>

<p>
    <a asp-controller="ECommerce" asp-action="Index">Add Item</a>
</p>

<p>
    Grand Total = @ViewBag.GrandTotal
    <a class="btn btn-outline-danger float-right" asp-controller="Cart" asp-action="Checkout">Checkout</a>
</p>
<br />

<table class="table">
        <thead>
            <tr>
                <th>

                </th>
                <th>
                    Product Name
                </th>
                <th>
                    Vendor Name
                </th>
                <th>
                    Quantity
                </th>
                <th>
                    Delivery Date
                </th>
                <th>
                    Price
                </th>
                <th></th>
            </tr>
        </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                <img src="@("~/image/"+item.Product.Image_Name)" asp-append-version="true" alt="Card image" height="300" width="300">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Product.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Vendor.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>

            <td>
                @Html.DisplayFor(modelItem => item.AddedDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalAmount)
            </td>
        </tr>
        }
    </tbody>
</table>
